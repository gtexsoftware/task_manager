<div role="<%= @role %>" class="<%= @variant %>" aria-labelledby="alert-title" aria-describedby="alert-content">
  <div class="content">
    <%= render(IconComponent.new(name: @icon[:name], source: 'microsoft-icons')) %>

    <% if @title %>
      <h5 id="alert-title"><%= @title %></h5>
    <% end %>

    <% if content %>
      <p id="alert-content"><%= content %></p>
    <% end %>
  </div>

  <% if @closable %>
    <label class="close-button" for="close">
      <input type="checkbox" name="close" id="close">

      <%= render(IconComponent.new(name: 'dismiss', source: 'microsoft-icons')) %>
    </label>
  <% end %>
</div>